# Backend Environment Variables

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database Configuration
DATABASE_URL=sqlite:///./storage/qa_agent.db

# Browser Runner Configuration
BROWSER_RUNNER_HOST=localhost
BROWSER_RUNNER_PORT=8001
BROWSER_RUNNER_PROTOCOL=ws

# LLM Configuration (Use local/free-tier only)
LLM_PROVIDER=local  # Options: local, ollama, huggingface
LLM_MODEL=llama2  # For local: llama2, mistral, codellama
LLM_API_URL=http://localhost:11434  # Ollama default
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2048

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Storage Paths
STORAGE_ROOT=./storage
KNOWLEDGE_BASE_PATH=./storage/knowledge_base
VISUAL_SIGNATURES_PATH=./storage/visual_signatures
VERSIONS_PATH=./storage/versions
METRICS_PATH=./storage/metrics

# Generated Tests Output
GENERATED_TESTS_PATH=./generated_tests
GENERATED_PAGES_PATH=./generated_tests/pages
GENERATED_FEATURES_PATH=./generated_tests/features
GENERATED_TESTS_PATH_PYTEST=./generated_tests/tests

# Jenkins Configuration (Optional)
JENKINS_URL=http://localhost:8080
JENKINS_USER=admin
JENKINS_TOKEN=your_token_here

# Allure Configuration
ALLURE_RESULTS_PATH=./generated_tests/allure-results
ALLURE_REPORTS_PATH=./generated_tests/allure-reports

# Email Configuration (For monitoring summaries)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_password_here
NOTIFICATION_EMAIL=qa_team@example.com

# Safety & Guardrails
ENABLE_GUARDRAILS=true
BLOCKED_KEYWORDS=delete,remove,drop,truncate,system,os,subprocess

# Metrics & Observability
ENABLE_METRICS=true
METRICS_INTERVAL_SECONDS=60
MLFLOW_TRACKING_URI=http://localhost:5000

# Parallel Agents Configuration
ENABLE_PARALLEL_AGENTS=false
MAX_PARALLEL_AGENTS=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/backend.log
