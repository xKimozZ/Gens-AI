# Browser Runner Environment Variables

# Server Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=true

# Playwright Configuration
HEADLESS=false
BROWSER_TYPE=chromium  # Options: chromium, firefox, webkit
SLOW_MO=0  # Milliseconds to slow down operations
TIMEOUT=30000  # Default timeout in milliseconds

# Video & Screenshot Configuration
ENABLE_VIDEO=true
ENABLE_SCREENSHOTS=true
VIDEO_PATH=../generated_tests/videos
SCREENSHOT_PATH=../generated_tests/screenshots

# Browser Context Configuration
VIEWPORT_WIDTH=1920
VIEWPORT_HEIGHT=1080
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# RPC/WebSocket Configuration
RPC_PROTOCOL=ws
RPC_MAX_CONNECTIONS=10
RPC_HEARTBEAT_INTERVAL=30

# Execution Configuration
MAX_EXECUTION_TIME=600  # Maximum test execution time in seconds
ENABLE_TRACING=true
TRACE_PATH=../generated_tests/traces

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/runner.log
